<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xml:lang="en"
      lang="en"
      metal:use-macro="context/prefs_main_template/macros/master"
      i18n:domain="cmfplacefulworkflow">


    <metal:main metal:fill-slot="prefs_configlet_main"
         tal:define="allowedContentTypes allowedSortedContentTypes|context/allowedContentTypes;
                     wfpid python:request.get('wfpid');
                     wf_policy python:context.portal_placeful_workflow.getWorkflowPolicyById(wfpid);
                     wtool context/portal_workflow;
                     wf_list python: [{'id': obj.getId(), 'title': obj.title_or_id()} for obj in wtool.objectValues()];">

        <span tal:define="dummy python:request.response.setHeader('pragma','no-cache')" />

        <header>

          <h1>
            <span tal:replace="wfpid" tal:condition="python:not wf_policy.getTitle()" />
            <span tal:condition="python:wf_policy.getTitle()">
                <span tal:replace="python:wf_policy.getTitle()" />
            </span>
          </h1>

          <p i18n:translate="description_workflow_custom_mapping">
              Custom workflow policy which maps content types to workflows.
          </p>

          <a href=""
            class="link-parent"
            tal:attributes="href string:$portal_url/@@workflow-policies-controlpanel"
            i18n:translate="label_up_to_placeful_workflow">
            Up to Placeful Workflow
          </a>

        </header>

        <div id="content-core">
          <form name="prefs-workflow-policy-mapping_set"
                action="${context/absolute_url}/@@placeful-workflow-policy-mapping"
                method="post">

              <fieldset>

                  <legend i18n:translate="legend_workflow_policy_details">
                      Workflow Policy Details
                  </legend>

                  <div class="mb-3">

                      <label class="form-label"
                        for="title"
                        i18n:domain="plone">
                        <span tal:omit-tag="" i18n:translate="label_title">Title</span>
                        <span class="fieldRequired"
                          title="Required"
                          i18n:domain="plone"
                          i18n:attributes="title title_required;"
                          i18n:translate="label_required">
                          (Required)
                        </span>
                      </label>

                      <input type="text"
                              id="title"
                              name="title"
                              value=""
                              class="form-control"
                              tal:attributes="value python:request.get('title',wf_policy.getTitle())" />
                  </div>

                  <div class="mb-3">

                      <label for="description"
                            class="form-label"
                            i18n:domain="plone"
                            i18n:translate="label_description">
                          Description
                      </label>

                      <textarea cols="80"
                                rows="2"
                                class="form-control"
                                id="description"
                                name="description"
                                tal:content="python:request.get('description',wf_policy.getDescription())">
                          Workflow Policy Description.
                      </textarea>

                      <div class="form-text"
                            i18n:translate="help_workflow_policy_description">
                          A brief description of the workflow policy.
                      </div>

                  </div>

                  <div class="mb-3">

                      <label for="default_workflow_id"
                            class="form-label"
                            i18n:translate="label_default_workflow">
                          Default Workflow
                      </label>

                      <select id="select_workflow"
                              class="form-select"
                              name="default_workflow_id">

                          <option tal:repeat="wf wf_list"
                                  tal:attributes="value wf/id;
                                                  selected python:'selected' if (wf['id'],)==wf_policy.getDefaultChain(context) else None"
                                  tal:content="wf/title"
                                  i18n:domain="plone"
                                  i18n:translate="">
                              example_workflow
                          </option>
                      </select>

                      <div class="form-text"
                            i18n:translate="help_default_workflow_for_types">
                          Default workflow for content types.
                      </div>
                  </div>

                  <div class="mb-3"
                    summary="Workflow to content type mapping."
                    i18n:attributes="summary summary_workflow_type_mapping;">

                      <label for="workflow_id" class="form-label"
                        summary="Workflow to content type mapping."
                        i18n:attributes="summary summary_workflow_type_mapping;"
                        i18n:translate="label_workflow_by_type">
                          Workflows by type
                      </label>

                      <tal:ctype tal:repeat="ctype allowedContentTypes">
                        <div class="input-group mb-3"
                          tal:define="ctype_title ctype/Title;
                          ctype_id ctype/getId;

                          chain python:wf_policy.getChainFor(ctype_id, managescreen=True) or ('backward compatibility',);">
                          <label class="input-group-text"
                            for="select_workflow"
                            tal:content="ctype_title"
                            tal:attributes="for python: 'select_workflow_' + ctype_id"
                            i18n:translate="">Title</label>
                          <select id="select_workflow" name="workflow_id" class="form-select"
                            tal:attributes="name string:wf.${ctype_id}:record;id python: 'select_workflow_' + ctype_id" >
                            <option value="acquisition"
                              tal:attributes="selected python:'selected' if chain is None else None;"
                              i18n:translate="label_mapping_acquire_workflow">Acquire workflow from above</option>
                            <option value=""
                              tal:attributes="selected python:'selected' if chain == () else None;"
                              i18n:translate="label_mapping_no_workflow">No workflow</option>

                            <option value="(Default)"
                              tal:attributes="selected python:'selected' if chain == '(Default)' else None;"
                              i18n:translate="label_mapping_default_worflow">Default workflow for the policy</option>
                            <option tal:repeat="wf wf_list"
                              tal:attributes="value wf/id;
                                selected python:'selected' if (wf['id'],) == chain else None"
                              tal:content="wf/title"
                              i18n:domain="plone"
                              i18n:translate="">workflow_id</option>
                          </select>
                        </div>
                      </tal:ctype>

                      <div class="form-text" i18n:translate="help_workflow_assign_all_types">
                        You can assign a workflow for all content types.
                      </div>

                      <input type="hidden" value="" name="wfpid" tal:attributes="value wfpid" />

                  </div>
                  <div class="formControls">
                      <input class="btn btn-primary"
                              type="submit"
                              name="submit"
                              value="Save"
                              i18n:domain="plone"
                              i18n:attributes="value label_save;" />
                  </div>
              </fieldset>
          </form>
        </div>
    </metal:main>

</html>
