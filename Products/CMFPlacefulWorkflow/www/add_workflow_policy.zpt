<form action="manage_addWorkflowPolicy"
      method="POST"
>

  <h3 i18n:translate="">Add Workflow policy</h3>

  <table border="0"
         cellpadding="2"
         cellspacing="0"
  >
    <tr>
      <td align="left"
          valign="top"
      >
        <div class="form-label"
             i18n:translate=""
        >
    Id
        </div>
      </td>
      <td align="left"
          valign="top"
      >
        <input name="id"
               size="40"
               type="text"
        />
      </td>
    </tr>
    <tr>
      <td align="left"
          valign="top"
      >
        <div class="form-label"><label i18n:translate="">Type</label></div>
      </td>
      <td align="left"
          valign="top"
      >
        <div tal:repeat="wptype options/workflow_policy_types">
          <input id="id"
                 name="workflow_policy_type"
                 type="radio"
                 value="id"
                 tal:attributes="
                   name wptype;
                   id wptype;
                 "
          />
          <label for="ids"
                 tal:content="wptype"
                 tal:attributes="
                   for wptype;
                 "
          >Id</label><br />
        </div>
      </td>
    </tr>
    <tr>
      <td align="left"
          valign="top"
      >
      </td>
      <td align="left"
          valign="top"
      >
        <div class="form-element">
          <input class="form-element"
                 name="submit"
                 type="submit"
                 value=" Add "
                 i18n:attributes="value"
          />
        </div>
      </td>
    </tr>
  </table>
</form>
